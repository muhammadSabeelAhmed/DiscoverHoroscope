<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">@color/nav</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/nav</item>
        <item name="android:itemBackground">@drawable/option_rectangle</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:popupBackground">@color/black</item>
        <item name="android:textColorSecondary">@color/white</item>

    </style>

    <color name="nav">#000000</color>
    <color name="new_text_button">#ffcc00</color>

    <style name="MyDialogStyle" parent="android:Theme.Material.Light.Dialog.NoActionBar">
        <item name="android:colorBackground">@color/customTxtColor1</item>
        <item name="android:textColor">@color/new_text_button</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:topLeftRadius">20dp</item>
        <item name="android:topRightRadius">20dp</item>
        <item name="android:bottomLeftRadius">20dp</item>
        <item name="android:bottomRightRadius">20dp</item>
    </style>
</resources>
